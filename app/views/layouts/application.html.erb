                <%= link_to "予約済みルーム一覧", "#" %>
              </li>
              <li>
                <%= link_to "登録済みルーム一覧", "#" %>
              </li>
              <li>
                <%= link_to "設定", "#" %>
              </li>
              <li>
                <%= link_to "ログアウト", "#" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    <div class=></div>
    <%= yield %>
    
    <footer>
      <p>© 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>
