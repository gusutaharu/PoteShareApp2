<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td>
            <%= link_to "/rooms/#{reservation.room_id}" do%>
              <%= image_tag reservation.room.room_img.url, class: "reservations-image" %>
            <% end %>
          </td>
          <td class="posts-name">
            <%= link_to reservation.room.room_name,"/rooms/#{reservation.room_id}"%>
          </td>
          <td class="posts-content">
            <%= reservation.room.room_introduction %>
          </td>
          <td class="price-icon">
            <% day = (reservation.end_date - reservation.start_date)/86000 %>
            <%= reservation.room.fee*day.to_i*reservation.number_of_people %>
          </td>
          <td>
            <%= reservation.start_date %>
          </td>
          <td>
            <%= reservation.end_date %>
          </td>
          <td>
            <%= reservation.created_at.to_s(:datetime_jp)%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
