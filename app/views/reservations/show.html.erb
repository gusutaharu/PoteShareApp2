<div class="container-fiuld user">
  <div class="row">
    <div class="col-md-12 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <%= label_tag :address,"予約した部屋",class: "col-md-3" %>
            <div class="col-md-9">
              <%= link_to "#{@room.room_name}", "rooms/#{@reservation.room_id}" %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= label_tag :start_date, "開始日", class: "col-md-3" %>
            <div class="col-md-9">
              <%= @reservation.start_date.to_s(:datetime_jp) %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= label_tag :end_date, "終了日", class: "col-md-3" %>
            <div class="col-md-9">
              <%= @reservation.end_date.to_s(:datetime_jp) %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= label_tag "", "価格", class: "col-md-3" %>
            <div class="col-md-9">
              <% use_day = (@reservation.end_date - @reservation.start_date)/86000 %>
              <%= @room.fee*use_day.to_i*@reservation.number_of_people %>円
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
