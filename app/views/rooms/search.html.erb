<div class="container-fiuld room">
  <h4 class="pb-4">検索結果:
  <%= @rooms.count %>件
  </h4>
  <div class="row">
    <% @rooms.each do |room| %>
    <div class="col-sm-6 col-lg-4 col-xl-3">
      <div class="room-frame-inner">
        <%= link_to "/rooms/#{room.id}" do%>
          <div class="room-image-out">
            <%= image_tag room.room_img.url ,class: "room-image" %>
          </div>
          <div class="room-profile">
            <p class="room-profile-name">
              <%= room.room_introduction %>
            </p>
            <p class="room-profile-city">
              <%= room.address %>
            </p>
            <p class="room-profile-price price-icon">
              <%= room.fee %>
            </p>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>