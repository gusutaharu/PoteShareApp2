<div class="room-show container">
  <%= render "shared/error2", obj: @reservation %>
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @room.room_img.url,class:"room-show-image"%>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <%= link_to "/" do%>
              <%= image_tag @user.icon_img.url,class:"host-icon"%>
          <% end %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name">
            <%= @room.room_name %>
          </p>
          <p class="room-show-profile-address">
            <%= @room.address %>
          </p>
        </div>
      </div>
      <p class="room-show-detile-content">
        <%= @room.room_introduction %>
      </p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon">
          <%= @room.fee %> / 日
        </h5>
        <div class="room-show-date-select">
          <%= form_for @reservation, url: reservations_confirm_path do |f|%>
            <%= f.label :start_date ,"開始日" %>
            <%= f.date_field :start_date, class: "form-control mb-4" %>
            <%= f.label :end_date ,"終了日" %>
            <%= f.date_field :end_date, class: "form-control mb-4" %>
            <%= f.label :number_of_people,"人数"%>
            <%= f.number_field :number_of_people, class: "form-control mb-4"  %>
            <%= f.hidden_field :room_id, :value => @room.id %>
            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>