<div class="container device">
  <div class="device_frame">
    <p class="my-4">ログイン</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="col-2 required-b pt-2"></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",:placeholder => "メールアドレス" %>
        </div>

        <div class="field">
          <div class="col-2 required-b pt-2"></div>
      <%= f.password_field :password, autocomplete: "current-password",class: "form-control",:placeholder => "パスワード" %>
        </div>

        <div class="actions">
      <%= f.submit "ログイン",class: "form-control btn-primary my-4" %>
        </div>
      <% end %>
      
      <%= link_to "新しいアカウントを作成",new_user_registration_path %>

    </div>
  </div>
</div>